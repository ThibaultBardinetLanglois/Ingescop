{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block pageContainer %}
    {% if is_granted('ROLE_ADMIN') %}
        <a id="panelconfig-link" href="{{ path('admin_panelconfig') }}"><strong>&#11013;</strong> Retour au panneau de configuration</a>
    {% endif %}
    <div class="flex justify-center">
    {% for message in app.flashes('Success') %}
        <div class="border-2 bg-green-200 text-xl py-2 max-w-3xl">
            <p> &#10004; {{ message }} </p>
        {% endfor %}
        </div>
    </div>
    <div class="flex justify-center m-48">
    {{ form_start(form, {'attr': {'class': ' text-5xl'}}) }}
    <div class ="p-4">
        {{ form_widget(form.lastName, {'attr': {'class': 'border-b-2 border-yellow-500 focus:outline-none'}}) }}
    </div>
    <div class ="p-4">
        {{ form_widget(form.firstName, {'attr': {'class': 'border-b-2 border-yellow-500 focus:outline-none'}}) }}
    </div>
    <div class ="p-4">
        {{ form_widget(form.phoneNumber, {'attr': {'class': 'border-b-2 border-yellow-500 focus:outline-none'}}) }}
    </div>
    <div class ="p-4">
        {{ form_widget(form.emailAddress, {'attr': {'class': 'border-b-2 border-yellow-500 focus:outline-none'}}) }}
    </div>
    <div class ="p-4">
        {{ form_widget(form.message, {'attr': {'class': 'border-b-2 border-yellow-500 focus:outline-none'}}) }}
    </div>
    <div class="flex justify-end">
        <input type ="submit" value="Envoyer" class ="m-4 rounded-full transition delay-150 text-white px-8 bg-gray-600 hover:bg-white hover:text-yellow-500 hover:border-2 border-yellow-500">
    </div>
    {{ form_end(form) }}
    </div>
    {% for message in app.flashes('Success') %}
    <div class="border-2 bg-green-200 text-xl py-2 max-w-md">
                <p> &#10004; {{ message }} </p>
        {% endfor %}
    </div>

{% endblock %}
